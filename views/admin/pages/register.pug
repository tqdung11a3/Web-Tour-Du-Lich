extends ../layouts/account.pug

block main
  .form-account
    h1.inner-title Đăng ký
    .inner-desc Tạo một tài khoản để tiếp tục

    form.inner-form(id="register-form")
      .inner-group
        label(
          for="fullName"
          class="inner-label"
        ) Họ tên
        input(
          type="text"
          name="fullName"
          id="fullName"
          placeholder="Ví dụ: Lê Văn A"
          class="inner-control"
        )
      .inner-group
        label(
          for="email"
          class="inner-label"
        ) Email
        input(
          type="email"
          name="email"
          id="email"
          placeholder="Ví dụ: levana@gmail.com"
          class="inner-control"
        )
      .inner-group
        label(
          for="password"
          class="inner-label"
        ) Mật khẩu
        input(
          type="password"
          name="password"
          id="password"
          class="inner-control"
        )
      .inner-meta
        .inner-confirm
          input(
            type="checkbox"
            name="agree"
            id="agree"
            class="inner-check"
          )
          label(
            for="agree"
            class="inner-label"
          ) Tôi chấp nhận các điều khoản và điều kiện
      button(class="inner-button") Đăng Ký

    .inner-more
      span Bạn đã có tài khoản?
      a(href=`/${pathAdmin}/account/login`) Đăng nhập