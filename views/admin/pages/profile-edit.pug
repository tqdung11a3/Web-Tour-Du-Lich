extends ../layouts/default.pug

block title
  title Thông tin cá nhân

block main
  
  h1.box-title Thông tin cá nhân

  //- Section 8
  .section-8
    form(id="profile-edit-form")
      .inner-group
        label(for="fullName" class="inner-label") Họ tên
        input(type="text" id="fullName" name="fullName" value="Lê Văn A")
      .inner-group
        label(for="email" class="inner-label") Email
        input(type="email" id="email" name="email" value="levana@gmail.com")
      .inner-group
        label(for="phone" class="inner-label") Số điện thoại
        input(type="text" id="phone" name="phone" value="0987654321")
      .inner-group
        label(for="positionCompany" class="inner-label") Chức vụ
        input(type="text" id="positionCompany" readonly value="Nhân viên")
      .inner-group
        label(for="role" class="inner-label") Nhóm quyền
        input(type="text" id="role" readonly value="Quản lý tour")
      .inner-group.inner-two-col
        label(for="avatar" class="inner-label") Ảnh đại diện
        .inner-upload-image
          input(
            type="file" 
            id="avatar"
            name="avatar"
            filepond-image
            )
      .inner-button.inner-two-col
        button Cập nhật
    .inner-back
      a(href="#") Đổi mật khẩu
  //- End Section 8