extends ../layouts/default.pug

block title
  title Tổng quan

block main
  
  h1.box-title Tổng quan

  //- Section 1
  .section-1
    .inner-item
      .inner-icon
        img(src="assets/images/section-1-icon-1.svg", alt="")
      .inner-content
        .inner-title Người dùng
        .inner-number 1.200
    .inner-item
      .inner-icon
        img(src="assets/images/section-1-icon-2.svg", alt="")
